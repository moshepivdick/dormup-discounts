generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
  schemas   = ["auth", "public"]
}

model Venue {
  id                Int                     @id @default(autoincrement())
  name              String
  city              String
  category          String
  discountText      String
  details           String?
  openingHours      String?
  openingHoursShort String?
  mapUrl            String?
  latitude          Float
  longitude         Float
  imageUrl          String?
  thumbnailUrl      String?
  isActive          Boolean                 @default(true)
  createdAt         DateTime                @default(now())
  updatedAt         DateTime                @updatedAt
  phone             String?
  avgStudentBill    Float?
  discountUses      DiscountUse[]
  partner           Partner?
  views             VenueView[]
  dailyMetrics      DailyPartnerMetrics[]
  monthlyMetrics    MonthlyPartnerMetrics[]
  reportSnapshots   ReportSnapshot[]

  @@index([city])
  @@index([category])
  @@schema("public")
}

model DiscountUse {
  id            Int       @id @default(autoincrement())
  venueId       Int
  generatedCode String    @unique
  status        String    @default("generated")
  qrSlug        String?   @unique
  createdAt     DateTime  @default(now())
  expiresAt     DateTime
  confirmedAt   DateTime?
  user_id       String?   @db.Uuid
  profiles      Profile?  @relation(fields: [user_id], references: [id], onUpdate: NoAction)
  venue         Venue     @relation(fields: [venueId], references: [id])

  @@index([user_id], map: "idx_discount_uses_user_id")
  @@index([venueId, user_id], map: "idx_discount_uses_venue_user")
  @@index([createdAt], map: "idx_discount_uses_created_at")
  @@index([status, confirmedAt], map: "idx_discount_uses_status_confirmed")
  @@schema("public")
}

model Partner {
  id              String                  @id @default(uuid())
  email           String                  @unique
  passwordHash    String
  venueId         Int                     @unique
  createdAt       DateTime                @default(now())
  lastLoginAt     DateTime?
  isActive        Boolean                 @default(true)
  venue           Venue                   @relation(fields: [venueId], references: [id])
  dailyMetrics    DailyPartnerMetrics[]
  monthlyMetrics  MonthlyPartnerMetrics[]
  reportSnapshots ReportSnapshot[]

  @@schema("public")
}

model Admin {
  id           String    @id @default(uuid())
  email        String    @unique
  passwordHash String
  role         String    @default("admin")
  createdAt    DateTime  @default(now())
  lastLoginAt  DateTime?

  @@schema("public")
}

model VenueView {
  id         Int      @id @default(autoincrement())
  venueId    Int
  city       String
  createdAt  DateTime @default(now())
  userAgent  String?
  user_id    String?  @db.Uuid
  dedupe_key String?  @unique
  profiles   Profile? @relation(fields: [user_id], references: [id], onUpdate: NoAction)
  venue      Venue    @relation(fields: [venueId], references: [id])

  @@index([createdAt], map: "idx_venue_views_created_at")
  @@index([user_id], map: "idx_venue_views_user_id")
  @@index([venueId, user_id], map: "idx_venue_views_venue_user")
  @@index([dedupe_key], map: "idx_venue_views_dedupe_key")
  @@index([venueId, createdAt], map: "idx_venue_views_venue_created")
  @@schema("public")
}

model University {
  id           String              @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name         String
  city         String
  emailDomains String[]            @default([]) @map("email_domains")
  createdAt    DateTime            @default(now()) @map("created_at") @db.Timestamptz(6)
  profiles     Profile[]
  requests     UniversityRequest[]

  @@index([emailDomains], map: "idx_universities_email_domains", type: Gin)
  @@map("universities")
  @@schema("public")
}

model Profile {
  id                        String                     @id @db.Uuid
  email                     String                     @unique
  first_name                String?
  university_id             String                     @db.Uuid
  verified_student          Boolean                    @default(false)
  role                      String                     @default("user")
  is_admin                  Boolean                    @default(false) @map("is_admin")
  createdAt                 DateTime                   @default(now()) @map("created_at") @db.Timestamptz(6)
  last_activity_at          DateTime?                  @db.Timestamptz(6)
  DiscountUse               DiscountUse[]
  VenueView                 VenueView[]
  email_verification_tokens email_verification_tokens?
  users                     users                      @relation(fields: [id], references: [id], onDelete: Cascade, onUpdate: NoAction)
  universities              University                 @relation(fields: [university_id], references: [id], onUpdate: NoAction)
  user_stats                user_stats?

  @@index([last_activity_at], map: "idx_profiles_last_activity_at")
  @@index([university_id], map: "idx_profiles_university_id")
  @@map("profiles")
  @@schema("public")
}

model UniversityRequest {
  id               String      @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  requestedName    String      @map("requested_name")
  requestedCity    String?     @map("requested_city")
  requestedDomains String[]    @default([]) @map("requested_domains")
  requesterEmail   String      @map("requester_email")
  status           String      @default("pending")
  notes            String?
  universityId     String?     @map("university_id") @db.Uuid
  created_at       DateTime    @default(now()) @db.Timestamptz(6)
  university       University? @relation(fields: [universityId], references: [id], onDelete: NoAction, onUpdate: NoAction)

  @@index([requesterEmail], map: "idx_university_requests_requester_email")
  @@index([status], map: "idx_university_requests_status")
  @@map("university_requests")
  @@schema("public")
}

