// Report snapshots (PDF/PNG storage metadata)
model ReportSnapshot {
  id            String    @id @default(uuid())
  job_id        String    @unique // Correlation ID for UI polling
  scope         String // "admin" | "partner"
  month         String // "YYYY-MM"
  partner_id    String?   @db.Uuid
  venue_id      Int?
  status        String    @default("PENDING") // "PENDING" | "READY" | "FAILED"
  created_at    DateTime  @default(now()) @db.Timestamptz(6)
  completed_at  DateTime? @db.Timestamptz(6)
  created_by    String?   @db.Uuid // Admin or Partner ID
