  venue         Venue?    @relation(fields: [venue_id], references: [id], onDelete: SetNull)

  @@index([scope, month])
  @@index([partner_id, month])
  @@index([created_at])
  @@index([status, created_at])
  @@index([month, scope])
  @@schema("public")
}

